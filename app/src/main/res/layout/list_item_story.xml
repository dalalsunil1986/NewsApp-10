<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_story_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="6dp">

    <!-- Section Name and Title (article name) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_story_section_name"
            style="@style/style_list_item_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/textColorDeemphasized"
            tools:text="US news" />

        <TextView
            android:id="@+id/list_item_story_title"
            style="@style/style_list_item_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorEmphasized"
            tools:text="Expert: Sarah Sanders broke ethics rules with tweet about restaurant ejection" />

    </LinearLayout>

    <!-- Publication Date and Author (if any) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_story_date"
            style="@style/style_list_item_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorDeemphasized"
            tools:text="June 16, 2018" />

        <TextView
            android:id="@+id/list_item_story_author"
            style="@style/style_list_item_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/textColorDeemphasized"
            tools:text="by Author Lastname" />

    </LinearLayout>

</LinearLayout>