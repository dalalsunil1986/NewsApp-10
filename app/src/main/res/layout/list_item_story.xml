<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_story_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    app:cardCornerRadius="4dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:id="@+id/list_item_story_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="top"
        android:orientation="vertical">

        <!-- Section Name and Date horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_item_story_pillar_name"
                style="@style/style_story.section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="News" />

            <TextView
                android:id="@+id/list_item_divider_pillar_section"
                style="@style/style_story.section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="\u2022" />

            <TextView
                android:id="@+id/list_item_story_section_name"
                style="@style/style_story.section_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="US news" />

            <TextView
                android:id="@+id/list_item_story_date"
                style="@style/style_story.date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="June 16, 2018" />

        </LinearLayout>

        <TextView
            android:id="@+id/list_item_story_title"
            style="@style/style_story.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Expert: Sarah Sanders broke ethics rules with tweet about restaurant ejection" />

        <TextView
            android:id="@+id/list_item_story_author"
            style="@style/style_story.author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="by Author Lastname" />

    </LinearLayout>

</android.support.v7.widget.CardView>